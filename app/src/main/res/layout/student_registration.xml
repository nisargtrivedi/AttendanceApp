<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textStyle="bold"
        android:fontFamily="@font/f"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Student Registration" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:id="@+id/teacher"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/student_btn_selector" />

    <EditText
        android:maxLength="12"
        android:inputType="number"
        android:fontFamily="@font/f"
        android:id="@+id/edtEnNo"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:hint="Enter Student Enroll Number"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>

    <EditText
        android:fontFamily="@font/f"
        android:id="@+id/edtUsername"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:hint="Enter Student Name"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>

    <TextView
        android:textSize="16sp"
        android:gravity="center|left"
        android:fontFamily="@font/f"
        android:id="@+id/edtDOB"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:hint="Enter Student DOB"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"></TextView>

    <EditText
        android:fontFamily="@font/f"
        android:id="@+id/edtAddress"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:hint="Enter Student Address"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_margin="10dp"
        android:text="Sign Up"
        android:textStyle="bold"
        android:fontFamily="@font/f"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"></androidx.appcompat.widget.AppCompatButton>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_margin="10dp"
        android:text="Sign IN"
        android:textStyle="bold"
        android:fontFamily="@font/f"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"></androidx.appcompat.widget.AppCompatButton>
</LinearLayout>